{% assign compare_price_exists = price_compare %}

{% comment %} <div class="card">
  <div class="card__image">
    <a href="{{ title_link }}">
      <img src="{{ featured_image.src | img_url: '300x300' }}" alt="{{ featured_image.alt | escape }}">
    </a>
  </div>
  <div class="card__content">
    <h3 class="card__title">
      <a href="{{ title_link  }}">{{ title }}</a>
    </h3>
    <div class="card__price">
      <span class="card__price--current">{{ price | money }}</span>
    </div>
  </div>
</div> {% endcomment %}

<li class="card">
  <a class="card__image__wrapper" href="{{ product.url }}">
    <img src="{{ product.images.first.src | img_url: '300x300' }}" alt="{{ product.title }}" loading="lazy">
    <footer class="card__footer">
      <span>{{ product.title }}</span>
      <div class="card__price">
        <span>{{ product.compare_at_price | money }}</span>
        <span class="card__compare__price">{{ product.price | money }}</span>
      </div>
    </footer>
  </a>
</li>
